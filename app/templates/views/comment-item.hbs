<div class="comment-header">
	<div class="toggle" {{action "toggleExpanded" target=view}}>
		<div {{bind-attr class=":anicon view.isExpanded:open"}}>
			<i class="line vert"></i>
			<i class="line hori"></i>
		</div>
	</div>
  <strong>{{username}}</strong> {{time-ago time}} | {{#link-to 'item' id}}link{{/link-to}}
</div>

<div {{bind-attr class=":comment-content view.isExpanded:show:hide"}}>
  <div class="comment-text">{{{text}}}</div>
  {{#if hasKids}}
    {{collection 'comment-items' content=kids}}
  {{/if}}
</div>
