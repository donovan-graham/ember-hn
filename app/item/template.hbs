<div class="article">
	<h1 class="title">{{item.title}}</h1>
	<span class="source">(<a href={{item.url}}>{{url-parse item.url part="hostname"}}</a>)</span>

	<span class="info">
	  {{item.score}} points by {{#link-to 'user' item.username}}{{item.username}}{{/link-to}} {{time-ago item.time}}
	  | {{#link-to 'item' item.id}}{{#if item.hasKids}}comments{{else}}discuss{{/if}}{{/link-to}}
	</span>

  {{#if item.hasKids}}
    <ul class="comment-items">
      {{#each item.kids key="@index" as |kid|}}
        {{comment-item comment=kid}}
      {{/each}}
    </ul>
  {{/if}}
</div>

